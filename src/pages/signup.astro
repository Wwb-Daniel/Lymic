---
import AuthLayout from '@/layouts/AuthLayout.astro';
import SignupForm from '@/components/SignupForm';
import GradientBlinds from '@/components/GradientBlinds';
---

<AuthLayout title="Registrarse - Spotify Clone">
  <div class="min-h-screen relative flex items-center justify-center p-4">
    <!-- Fondo animado con GradientBlinds -->
    <div class="absolute inset-0">
      <GradientBlinds
        client:load
        gradientColors={['#1DB954', '#191414']}
        angle={0}
        noise={0.3}
        blindCount={12}
        blindMinWidth={50}
        spotlightRadius={0.5}
        spotlightSoftness={1}
        spotlightOpacity={1}
        mouseDampening={0.15}
        distortAmount={0}
        shineDirection="left"
        mixBlendMode="normal"
      />
    </div>
    
    <!-- Overlay oscuro -->
    <div class="absolute inset-0 bg-black/40"></div>
    
    <!-- Contenedor principal con glassmorphism -->
    <div class="relative z-10 w-full max-w-md bg-gradient-to-br from-black/30 via-black/20 to-black/30 backdrop-blur-xl rounded-3xl border border-white/10 p-8 shadow-2xl">
      <!-- Logo -->
      <div class="text-center mb-8">
        <svg role="img" viewBox="0 0 24 24" class="w-12 h-12 mx-auto mb-8" fill="white">
          <title>Spotify</title>
          <path d="M13.427.01C6.805-.253 1.224 4.902.961 11.524.698 18.147 5.853 23.728 12.476 23.99c6.622.263 12.203-4.892 12.466-11.514S20.049.272 13.427.01m5.066 17.579a.717.717 0 0 1-.977.268 14.4 14.4 0 0 0-5.138-1.747 14.4 14.4 0 0 0-5.42.263.717.717 0 0 1-.338-1.392c1.95-.474 3.955-.571 5.958-.29 2.003.282 3.903.928 5.647 1.92a.717.717 0 0 1 .268.978m1.577-3.15a.93.93 0 0 1-1.262.376 17.7 17.7 0 0 0-5.972-1.96 17.7 17.7 0 0 0-6.281.238.93.93 0 0 1-1.11-.71.93.93 0 0 1 .71-1.11 19.5 19.5 0 0 1 6.94-.262 19.5 19.5 0 0 1 6.599 2.165c.452.245.62.81.376 1.263m1.748-3.551a1.147 1.147 0 0 1-1.546.488 21.4 21.4 0 0 0-6.918-2.208 21.4 21.4 0 0 0-7.259.215 1.146 1.146 0 0 1-.456-2.246 23.7 23.7 0 0 1 8.034-.24 23.7 23.7 0 0 1 7.657 2.445c.561.292.78.984.488 1.546" />
        </svg>
        <h1 class="text-5xl font-bold text-white mb-2">Regístrate para</h1>
        <h1 class="text-5xl font-bold text-white mb-8">empezar a escuchar</h1>
      </div>

      <!-- Formulario de registro -->
      <SignupForm client:only="react" />

      <!-- Separador -->
      <div class="relative my-8">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-white/20"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-4 bg-black/50 backdrop-blur-sm text-gray-300">o</span>
        </div>
      </div>

      <!-- Botones de redes sociales -->
      <div class="space-y-3 mb-8">
        <button class="w-full flex items-center justify-center gap-3 px-8 py-3 bg-white/5 backdrop-blur-sm border border-white/20 hover:border-white/40 hover:bg-white/10 rounded-full text-white font-semibold transition-all">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M22.1 12.2272C22.1 11.5182 22.0364 10.8363 21.9182 10.1818H12.5V14.05H17.8818C17.65 15.3 16.9455 16.3591 15.8864 17.0682V19.5772H19.1182C21.0091 17.8363 22.1 15.2727 22.1 12.2272Z" fill="#4285F4"/>
            <path fill-rule="evenodd" clip-rule="evenodd" d="M12.4998 21.9999C15.1998 21.9999 17.4635 21.1045 19.118 19.5772L15.8862 17.0681C14.9907 17.6681 13.8453 18.0227 12.4998 18.0227C9.89529 18.0227 7.69075 16.2636 6.90439 13.8999H3.56348V16.4908C5.20893 19.759 8.59075 21.9999 12.4998 21.9999Z" fill="#34A853"/>
            <path fill-rule="evenodd" clip-rule="evenodd" d="M6.90455 13.9C6.70455 13.3 6.59091 12.6591 6.59091 12C6.59091 11.3409 6.70455 10.7 6.90455 10.1V7.50909H3.56364C2.88636 8.85909 2.5 10.3864 2.5 12C2.5 13.6136 2.88636 15.1409 3.56364 16.4909L6.90455 13.9Z" fill="#FBBC05"/>
            <path fill-rule="evenodd" clip-rule="evenodd" d="M12.4998 5.97727C13.968 5.97727 15.2862 6.48182 16.3226 7.47273L19.1907 4.60455C17.4589 2.99091 15.1953 2 12.4998 2C8.59075 2 5.20893 4.24091 3.56348 7.50909L6.90439 10.1C7.69075 7.73636 9.89529 5.97727 12.4998 5.97727Z" fill="#EA4335"/>
          </svg>
          Registrarte con Google
        </button>

        <button class="w-full flex items-center justify-center gap-3 px-8 py-3 bg-white/5 backdrop-blur-sm border border-white/20 hover:border-white/40 hover:bg-white/10 rounded-full text-white font-semibold transition-all">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M15.195 4.513C15.873 3.69 16.351 2.567 16.351 1.433C16.351 1.278 16.341 1.123 16.318 1C15.206 1.044 13.872 1.734 13.083 2.668C12.449 3.379 11.871 4.513 11.871 5.647C11.871 5.825 11.905 5.991 11.916 6.047C11.982 6.058 12.094 6.08 12.216 6.08C13.206 6.08 14.45 5.413 15.195 4.513ZM15.973 6.313C14.317 6.313 12.961 7.325 12.093 7.325C11.171 7.325 9.97 6.38 8.525 6.38C5.779 6.38 3 8.648 3 12.918C3 15.586 4.023 18.398 5.301 20.211C6.391 21.744 7.347 23 8.725 23C10.081 23 10.682 22.1 12.371 22.1C14.083 22.1 14.472 22.978 15.973 22.978C17.463 22.978 18.453 21.61 19.397 20.265C20.442 18.72 20.887 17.219 20.897 17.142C20.809 17.119 17.963 15.952 17.963 12.695C17.963 9.871 20.198 8.604 20.331 8.504C18.852 6.381 16.596 6.314 15.973 6.314V6.313Z" fill="white"/>
          </svg>
          Registrarte con Apple
        </button>
      </div>

      <!-- Login link -->
      <div class="text-center space-y-4 pt-8 border-t border-white/20">
        <p class="text-gray-400">¿Ya tienes una cuenta?</p>
        <a
          href="/login"
          class="text-white underline hover:text-green-500 transition-colors font-semibold"
        >
          Iniciar sesión
        </a>
      </div>
    </div>
  </div>
</AuthLayout>
