---
import LibraryIcon from "@/icons/Library.astro"
import HomeIcon from "@/icons/Home.astro"
import SearchIcon from "@/icons/Search.astro"
import SideMenuItem from "./SideMenuItem.astro"
import UserMenu from "./UserMenu"
---

<nav class="flex flex-col flex-1 gap-2">
  <!-- User Menu con gradiente -->
  <div class="relative">
    <div class="absolute inset-0 bg-gradient-to-br from-purple-500/10 via-pink-500/10 to-blue-500/10 rounded-lg blur-xl"></div>
    <div class="relative bg-zinc-900/90 backdrop-blur-md rounded-lg p-4 border border-white/10">
      <UserMenu client:only="react" />
    </div>
  </div>

  <!-- Menú principal -->
  <div class="bg-zinc-900/90 backdrop-blur-md rounded-lg p-2 border border-white/10">
    <ul>
      <SideMenuItem href="/">
        <HomeIcon />
         Inicio
      </SideMenuItem>

      <SideMenuItem href="/search">
        <SearchIcon />
         Buscar
      </SideMenuItem>

      <SideMenuItem href="/upload">
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
        </svg>
         Subir Música
      </SideMenuItem>
    </ul>
  </div>

  <!-- Biblioteca -->
  <div class="bg-zinc-900/90 backdrop-blur-md rounded-lg p-2 flex-1 overflow-y-auto border border-white/10">
    <div class="flex items-center justify-between px-3 py-2 mb-2">
      <div class="flex items-center gap-2 text-gray-400">
        <LibraryIcon />
        <span class="font-semibold">Tu biblioteca</span>
      </div>
    </div>
    <div class="text-center py-8 text-gray-500">
      <p class="text-sm">Tus playlists aparecerán aquí</p>
    </div>
  </div>
</nav>
