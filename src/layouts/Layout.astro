---
import ModernPlayer from "@/components/ModernPlayer"
import Library from "@/components/Library"
import NowPlaying from "@/components/NowPlaying"
import TopBar from "@/components/TopBar"
import Hyperspeed from "@/components/Hyperspeed"
import { hyperspeedPresets } from "@/components/hyperspeedPresets"
import BackgroundColorBends from "@/components/BackgroundColorBends"
import { ViewTransitions } from "astro:transitions"

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/Lymic.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions fallback="none" />
  </head>
  <body>
    <!-- Fondo animado Hyperspeed -->
    <div id="colorbends-bg" class="fixed inset-0 w-full h-full">
      <Hyperspeed client:only="react" effectOptions={hyperspeedPresets.two} />
    </div>

    <div id="app" class="relative h-screen p-1 sm:p-2 md:p-2 lg:p-2 gap-1 sm:gap-2 z-10 transition-all duration-300 w-full">
      <aside class="[grid-area:aside] hidden md:flex flex-col overflow-y-auto h-full min-w-fit">
        <Library client:load />
      </aside>

      <main
        id="main-content"
        class="[grid-area:main] w-full rounded-lg bg-zinc-900/20 backdrop-blur-md overflow-y-auto overflow-x-hidden relative transition-all duration-300"
      >
        <TopBar client:load />
        <slot />
      </main>

      <footer class="[grid-area:player] h-[80px]">
        <ModernPlayer client:only="react" />
      </footer>
      
      <!-- Now Playing Panel - Parte del grid -->
      <NowPlaying client:only="react" />
    </div>
    
    <!-- Portal para modales -->
    <div id="modal-root"></div>
    <style>
      /* Mobile first - sin sidebar, sin now playing */
      #app {
        display: grid;
        grid-template-areas:
          "main"
          "player";
        grid-template-columns: 1fr;
        grid-template-rows: 1fr auto;
        gap: 0.5rem;
        height: 100vh;
        overflow: hidden;
      }

      /* Tablet breakpoint (768px and up) - con sidebar */
      @media (min-width: 768px) {
        #app {
          grid-template-areas:
            "aside main"
            "player player";
          grid-template-columns: auto 1fr;
          grid-template-rows: 1fr auto;
        }
      }

      /* Desktop breakpoint (1024px and up) - con sidebar y espacio para now playing */
      @media (min-width: 1024px) {
        #app {
          grid-template-areas:
            "aside main nowplaying"
            "player player player";
          grid-template-columns: auto 1fr 0fr;
          transition: grid-template-columns 0.3s ease;
        }
        
        /* Cuando nowplaying está abierto, darle espacio */
        #app[data-nowplaying-open="true"] {
          grid-template-columns: auto 1fr 355px;
        }
        
        #app[data-nowplaying-expanded="true"] {
          grid-template-columns: auto 1fr 420px;
        }
      }

      /* Large screens (1440px and up) */
      @media (min-width: 1440px) {
        #app {
          gap: 0.75rem;
        }
      }
    </style>

    <style is:global>
      html {
        height: 100% !important;
        margin: 0 !important;
        padding: 0 !important;
      }

      body {
        font-family: "CircularStd", system-ui, sans-serif !important;
        background: transparent !important;
        color: white !important;
        height: 100% !important;
        margin: 0 !important;
        padding: 0 !important;
      }

      #colorbends-bg {
        position: fixed !important;
        top: 0 !important;
        left: 0 !important;
        right: 0 !important;
        bottom: 0 !important;
        width: 100vw !important;
        height: 100vh !important;
        z-index: 0 !important;
        pointer-events: none !important;
      }

      #colorbends-bg > * {
        width: 100%;
        height: 100%;
      }

      /* Asegurar que los modales siempre estén al frente */
      #modal-root {
        position: relative;
        z-index: 9999;
      }

      /* Prevenir scroll cuando el modal está abierto */
      body.modal-open {
        overflow: hidden;
      }

      /* Ocultar scrollbar pero mantener funcionalidad de scroll */
      * {
        scrollbar-width: none; /* Firefox */
        -ms-overflow-style: none; /* IE y Edge */
      }

      *::-webkit-scrollbar {
        display: none; /* Chrome, Safari, Opera */
      }

      /* Ajustar overflow de contenedores principales */
      #app {
        overflow: hidden;
      }

      #main-content {
        overflow-y: auto;
        overflow-x: hidden;
        max-width: 100%;
      }

      /* Prevenir que el texto se salga de los contenedores */
      * {
        word-wrap: break-word;
        overflow-wrap: break-word;
      }

      /* Asegurar que las imágenes no se salgan */
      img {
        max-width: 100%;
        height: auto;
      }

      @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Medium.woff2") format("woff2");
        font-weight: 500;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Book.woff2") format("woff2");
        font-weight: 400;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Light.woff2") format("woff2");
        font-weight: 300;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Bold.woff2") format("woff2");
        font-weight: 700;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Black.woff2") format("woff2");
        font-weight: 900;
        font-style: normal;
        font-display: swap;
      }
    </style>
  </body>
</html>
